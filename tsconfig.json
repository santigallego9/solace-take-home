{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@custom-types/*": ["./src/app/types/*"],
      "@components/*": ["./src/app/components/*"],
      "@advocates/*": ["./src/app/components/advocates/*"],
      "@common/*": ["./src/app/components/common/*"],
      "@types/*": ["./src/app/types/*"],
      "@api/*": ["./src/app/api/*"],
      "@libs/*": ["./src/app/libs/*"],
      "@db/*": ["./src/db/*"],
      "@db": ["./src/db"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
